<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="#FFF7EE"
    android:layout_marginBottom="2dp">

    <TextView
        android:id="@+id/tvInvoiceId"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:text="123"
        android:textColor="#222"
        android:textSize="15sp"/>
    <TextView
        android:id="@+id/tvInvoiceStatus"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:text="Đã thanh toán"
        android:textColor="#18BC5A"
        android:textSize="15sp"/>
    <TextView
        android:id="@+id/tvInvoiceDate"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:text="01/08/2025"
        android:textColor="#222"
        android:textSize="15sp"/>

    <ImageButton
        android:id="@+id/btnInvoiceEdit"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="?android:selectableItemBackground"
        android:contentDescription="Sửa"
        android:src="@drawable/ic_edit"
        android:tint="#222"
        tools:ignore="UseAppTint,TouchTargetSizeCheck" />

    <ImageButton
        android:id="@+id/btnInvoiceView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="?android:selectableItemBackground"
        android:contentDescription="Xem"
        android:src="@drawable/ic_view"
        android:tint="#222"
        tools:ignore="UseAppTint,TouchTargetSizeCheck" />
</LinearLayout>
