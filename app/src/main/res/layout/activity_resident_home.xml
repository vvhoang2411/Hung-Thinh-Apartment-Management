<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#17345A">

    <!-- Logo và nút đăng xuất -->
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingHorizontal="28dp"
        android:paddingTop="32dp"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="176dp"
            android:layout_height="68dp"
            android:layout_alignParentStart="true"
            android:contentDescription="Logo"
            android:scaleType="center"
            android:src="@drawable/img_logohungthinh" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đăng xuất"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="20sp"
                android:paddingEnd="8dp"/>

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_logout"
                android:contentDescription="Logout"/>
        </LinearLayout>
    </RelativeLayout>

    <!-- Nội dung chính lùi xuống, căn giữa -->
    <ScrollView
        android:id="@+id/main_content"
        android:layout_below="@id/header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Tiêu đề -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trang Cư Dân"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="48sp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"/>

            <!-- Xin chào -->
            <TextView
                android:id="@+id/tvWelcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xin chào Ninh Quang Khải!"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:layout_marginBottom="32dp"/>

            <!-- Nút menu bo tròn -->
            <Button
                android:id="@+id/btnPersonalInfo"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/rounded_button"
                android:backgroundTint="#FFFFFF"
                android:text="Thông tin cá nhân"
                android:textAllCaps="false"
                android:textColor="#151515"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/btnServices"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="24dp"
                android:layout_height="60dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/rounded_button"
                android:text="Dịch vụ"
                android:textAllCaps="false"
                android:textColor="#151515"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/btnBill"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="24dp"
                android:layout_height="60dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/rounded_button"
                android:text="Thanh toán hóa đơn"
                android:textAllCaps="false"
                android:textColor="#151515"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/btnNotify"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="24dp"
                android:layout_height="60dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/rounded_button"
                android:text="Thông báo"
                android:textAllCaps="false"
                android:textColor="#151515"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/btnSupport"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="24dp"
                android:layout_height="60dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/rounded_button"
                android:text="Hỗ trợ"
                android:textAllCaps="false"
                android:textColor="#151515"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
