<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Thanh tiêu đề -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="?android:selectableItemBackground"
                android:contentDescription="Back"
                android:src="@drawable/ic_arrow_back"
                android:tint="#22385C"
                tools:ignore="UseAppTint,TouchTargetSizeCheck" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gym"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#22385C"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Ảnh tiện ích -->

        <!-- Tên -->
        <ImageView
            android:id="@+id/imgFacility"
            android:layout_width="match_parent"
            android:layout_height="137dp"
            android:layout_marginTop="23dp"
            android:background="@drawable/bg_image_rounded"
            android:scaleType="centerCrop"
            android:src="@drawable/img_gym" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="Tên"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#22385C" />

        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_edittext"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_marginTop="8dp"
            android:hint="Nhập tên của bạn"
            android:inputType="textPersonName"
            android:textColor="#22385C" />

        <!-- Số điện thoại -->
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="Số điện thoại"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#22385C" />

        <EditText
            android:id="@+id/etPhone"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_edittext"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_marginTop="8dp"
            android:hint="Nhập số điện thoại"
            android:inputType="phone"
            android:textColor="#22385C" />


        <!-- Ngày bắt đầu -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:text="Ngày bắt đầu"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#22385C" />

        <Spinner
            android:id="@+id/spinnerStartDate"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_spinner"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_marginTop="8dp" />

        <!-- Thời hạn -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="Thời hạn"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#22385C" />

        <Spinner
            android:id="@+id/spinnerDuration"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_spinner"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_marginTop="8dp" />

        <!-- Ghi chú -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:text="Ghi chú: Vui lòng chọn tiện ích bạn muốn sử dụng để đặt lịch trước. Một số tiện ích có thể giới hạn khung giờ hoặc số lượng người sử dụng trong ngày."
            android:textSize="14sp"
            android:textStyle="italic"
            android:textColor="#22385C"
            android:fontFamily="sans-serif-medium" />

        <!-- Nút đặt lịch -->
        <Button
            android:id="@+id/btnBook"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginTop="30dp"
            android:text="Đặt lịch"
            android:textStyle="bold"
            android:textColor="#fff"
            android:textSize="18sp"
            android:background="@drawable/bg_button_booking" />
    </LinearLayout>
</ScrollView>
