<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header với nút Back và tiêu đề -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?android:selectableItemBackground"
                android:contentDescription="Back"
                android:src="@drawable/ic_arrow_back"
                android:tint="#22385C"
                tools:ignore="TouchTargetSizeCheck,UseAppTint" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Gửi phản ánh"
                android:textColor="#22385C"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Căn hộ -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Căn hộ"
            android:textSize="16sp"
            android:textColor="#22385C"
            android:layout_marginBottom="4dp" />

        <Spinner
            android:id="@+id/spinner_apartment"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_edittext_readonly"
            android:padding="12dp"
            android:layout_marginBottom="18dp" />

        <!-- Vấn đề -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vấn đề"
            android:textSize="16sp"
            android:textColor="#22385C"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/edtProblem"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_edittext_readonly"
            android:hint="Điện chập chờn"
            android:textSize="16sp"
            android:padding="12dp"
            android:layout_marginBottom="18dp" />

        <!-- Ghi chú -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ghi chú"
            android:textSize="16sp"
            android:textColor="#22385C"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/edtNote"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@drawable/bg_edittext_readonly"
            android:hint="Cần gấp"
            android:textSize="16sp"
            android:padding="12dp"
            android:gravity="top"
            android:layout_marginBottom="28dp" />

        <!-- Nút gửi yêu cầu -->
        <Button
            android:id="@+id/btnSend"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_primary_button"
            android:elevation="4dp"
            android:text="Gửi "
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Nút danh sách yêu cầu -->
        <Button
            android:id="@+id/btnList"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_primary_button"
            android:elevation="4dp"
            android:text="Danh sách phản ánh"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>
