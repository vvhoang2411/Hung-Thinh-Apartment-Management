<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="#FFF7EE"
    android:layout_marginBottom="2dp">

    <TextView
        android:id="@+id/tvFeeType"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:text="Phí quản lý"
        android:textColor="#222"
        android:textSize="15sp"/>
    <TextView
        android:id="@+id/tvFeePrice"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="15.000đ"
        android:textColor="#222"
        android:textSize="15sp"/>
    <TextView
        android:id="@+id/tvFeeUnit"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:text="m2/tháng"
        android:textColor="#222"
        android:textSize="15sp"/>

    <ImageButton
        android:id="@+id/btnFeeEdit"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="?android:selectableItemBackground"
        android:contentDescription="Sửa"
        android:src="@drawable/ic_edit"
        android:tint="#222"
        tools:ignore="TouchTargetSizeCheck,UseAppTint" />
</LinearLayout>
