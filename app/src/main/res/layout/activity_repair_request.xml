<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Header với nút Back và tiêu đề -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?android:selectableItemBackground"
            android:contentDescription="Back"
            android:src="@drawable/ic_arrow_back"
            android:tint="#22385C"
            tools:ignore="TouchTargetSizeCheck,UseAppTint" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Gửi phản ánh"
            android:textColor="#22385C"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Vấn đề -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vấn đề"
        android:textSize="16sp"
        android:textColor="#22385C"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/edtProblem"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/bg_edittext_outline"
        android:hint="VD: Hỏng máy giặt"
        android:textSize="16sp"
        android:padding="12dp"
        android:layout_marginBottom="18dp" />

    <!-- Ghi chú -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ghi chú"
        android:textSize="16sp"
        android:textColor="#22385C"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/edtNote"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/bg_edittext_outline"
        android:hint="Vị trí và số lượng đồ bị hỏng"
        android:textSize="16sp"
        android:padding="12dp"
        android:gravity="top"
        android:layout_marginBottom="28dp" />

    <!-- Nút gửi yêu cầu -->
    <Button
        android:id="@+id/btnSend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gửi yêu cầu"
        android:backgroundTint="#22385C"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:padding="12dp" />
</LinearLayout>