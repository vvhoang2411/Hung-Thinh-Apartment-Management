<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="0dp"
        android:gravity="center_horizontal">

        <!-- Thanh tiêu đề và số tiền -->

        <!-- Hình thức thanh toán -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="14dp"
                android:background="?android:selectableItemBackground"
                android:contentDescription="Back"
                android:src="@drawable/ic_arrow_back"
                android:tint="#22385C"
                tools:ignore="UseAppTint,TouchTargetSizeCheck" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="Thanh toán"
                android:textColor="#22385C"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="#22385C">

            <TextView
                android:id="@+id/tvAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="66dp"
                android:gravity="center"
                android:text="Số tiền"
                android:textColor="#fff"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="12dp"
                android:gravity="center"
                android:text="720.000VND"
                android:textColor="#fff"
                android:textSize="29sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hình thức thanh toán"
            android:textColor="#22385C"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="14dp"/>

        <!-- Các phương thức thanh toán dạng hình ảnh: bạn có thể dùng RecyclerView nếu động -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="18dp">
            <ImageView android:layout_width="56dp" android:layout_height="42dp" android:layout_margin="6dp" android:src="@drawable/img_mastercard"/>
            <ImageView android:layout_width="56dp" android:layout_height="42dp" android:layout_margin="6dp" android:background="@drawable/bg_payment_selected" android:src="@drawable/img_visa"/>
            <ImageView android:layout_width="56dp" android:layout_height="42dp" android:layout_margin="6dp" android:src="@drawable/img_paypal"/>
            <ImageView android:layout_width="56dp" android:layout_height="42dp" android:layout_margin="6dp" android:src="@drawable/img_payoneer"/>
        </LinearLayout>

        <!-- Form nhập thông tin thanh toán -->
        <EditText
            android:id="@+id/edtOwnerName"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Tên người sở hữu"
            android:background="@drawable/bg_edittext_outline"
            android:layout_margin="10dp"
            android:paddingLeft="12dp"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/edtAccount"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Số tài khoản"
            android:background="@drawable/bg_edittext_outline"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"
            android:paddingLeft="12dp"
            android:textSize="16sp"
            android:inputType="number"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="10dp">

            <EditText
                android:id="@+id/edtBank"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:hint="Ngân hàng"
                android:background="@drawable/bg_edittext_outline"
                android:layout_marginEnd="10dp"
                android:paddingLeft="12dp"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/edtBranch"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:hint="Chi nhánh"
                android:background="@drawable/bg_edittext_outline"
                android:paddingLeft="12dp"
                android:textSize="16sp"/>
        </LinearLayout>

        <!-- Nút submit -->
        <Button
            android:id="@+id/btnPay"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="26dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/bg_primary_button"
            android:text="Thanh toán ngay"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>
