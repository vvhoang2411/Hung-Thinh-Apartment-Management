<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="#223261">

            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="200dp"
                android:layout_height="90dp"
                android:src="@drawable/img_logo_hungthinh"
                android:layout_marginTop="0dp"
                android:contentDescription="Logo"/>

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trang Cư Dân"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/tvWelcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xin chào Ninh Quang Khải!"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="8dp"/>

        </LinearLayout>

        <!-- Function Buttons Group -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="14dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/bg_function_box"
            android:padding="12dp">

            <!-- Invoice Button -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/btnInvoice"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:background="@drawable/bg_button_circle"
                    android:src="@drawable/ic_invoice"
                    android:layout_marginBottom="7dp"
                    android:contentDescription="Hóa đơn"
                    app:tint="#FFFFFF"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hóa đơn"
                    android:textSize="14sp"
                    android:textColor="#223261"/>

            </LinearLayout>

            <!-- Feedback Button -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/btnFeedback"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:background="@drawable/bg_button_circle"
                    android:src="@drawable/ic_feedback"
                    android:layout_marginBottom="7dp"
                    android:contentDescription="Phản ánh"
                    app:tint="#FFFFFF"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phản ánh"
                    android:textSize="14sp"
                    android:textColor="#223261"/>

            </LinearLayout>

            <!-- Event Button -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/btnEvent"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:background="@drawable/bg_button_circle"
                    android:src="@drawable/ic_event"
                    android:layout_marginBottom="7dp"
                    android:contentDescription="Sự kiện"
                    app:tint="#FFFFFF"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sự kiện"
                    android:textSize="14sp"
                    android:textColor="#223261"/>

            </LinearLayout>

            <!-- Meeting Button -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/btnMeeting"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:background="@drawable/bg_button_circle"
                    android:src="@drawable/ic_meeting"
                    android:layout_marginBottom="7dp"
                    android:contentDescription="Cuộc họp"
                    app:tint="#FFFFFF"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cuộc họp"
                    android:textSize="14sp"
                    android:textColor="#223261"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>