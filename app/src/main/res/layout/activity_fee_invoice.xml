<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="0dp"
        android:paddingTop="6dp"
        android:paddingBottom="24dp">

        <!-- ======== Bảng phí dịch vụ ======== -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bảng phí dịch vụ"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="#222"
            android:gravity="center_horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="10dp"/>


        <!-- Tìm kiếm, thêm mới -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="6dp">

            <EditText
                android:id="@+id/edtFeeType"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@drawable/bg_edittext_outline"
                android:drawableStart="@drawable/ic_search"
                android:hint="Loại phí"
                android:paddingStart="38dp"
                android:textSize="15sp"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/btnFeeSearch"
                android:layout_width="98dp"
                android:layout_height="44dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_primary_button"
                android:text="Tìm "
                android:textColor="#fff"
                android:textStyle="bold"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/btnFeeAdd"
                android:layout_width="98dp"
                android:layout_height="44dp"
                android:background="@drawable/bg_primary_button"
                android:text="Thêm "
                android:textColor="#fff"
                android:textStyle="bold"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>

        <!-- Header bảng phí dịch vụ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="#22385C"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="Loại phí"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="15sp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Đơn giá"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="15sp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="Đơn vị"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="15sp"/>
            <TextView
                android:layout_width="44dp"
                android:layout_height="wrap_content"
                android:text="Thao tác"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="15sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/feeListLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="10dp">

            <include layout="@layout/item_fee_row"/>
            <include layout="@layout/item_fee_row"/>
            <include layout="@layout/item_fee_row"/>

        </LinearLayout>

        <!-- ======== Quản lý hóa đơn ======== -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quản lý hóa đơn"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="#222"
            android:gravity="center_horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="10dp"/>

        <!-- Tìm kiếm, thêm mới hóa đơn -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="6dp">

            <EditText
                android:id="@+id/edtInvoiceId"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@drawable/bg_edittext_outline"
                android:drawableStart="@drawable/ic_search"
                android:hint="Mã hóa đơn"
                android:paddingStart="38dp"
                android:textSize="15sp"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/btnInvoiceSearch"
                android:layout_width="98dp"
                android:layout_height="44dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_primary_button"
                android:text="Tìm"
                android:textColor="#fff"
                android:textStyle="bold"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/btnInvoiceAdd"
                android:layout_width="98dp"
                android:layout_height="44dp"
                android:background="@drawable/bg_primary_button"
                android:text="Thêm "
                android:textColor="#fff"
                android:textStyle="bold"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>

        <!-- Header bảng hóa đơn -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="#22385C"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="Mã hóa đơn"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="15sp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="Trạng thái"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="15sp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="Hạn thanh toán"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="15sp"/>
            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="Thao tác"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="15sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/invoiceListLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="10dp">

            <include layout="@layout/item_invoice_row"/>
            <include layout="@layout/item_invoice_row"/>
            <include layout="@layout/item_invoice_row"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
