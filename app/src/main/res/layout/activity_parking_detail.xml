<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".ParkingDetailActivity">

    <!-- Thanh tiêu đề -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#1A2B4E">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingStart="24dp"
            android:paddingTop="8dp"
            android:paddingEnd="24dp"
            android:paddingBottom="8dp"
            android:text="Chi tiết"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold" />
    </FrameLayout>

    <!-- Nội dung chính sẽ chiếm phần còn lại -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="24dp">

        <!-- Thẻ thông tin -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_info_card"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_centerVertical="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Thông tin chỗ để xe"
                android:textColor="#1A2B4E"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Dùng GridLayout để căn chỉnh các dòng -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="6">

                <!-- Hàng 1: Tên khách hàng -->
                <TextView
                    style="@style/DetailLabel"
                    android:text="Tên khách hàng" />

                <TextView
                    style="@style/DetailValue"
                    android:text="Vũ Văn Hoàng" />
                <!-- Hàng 2: Địa chỉ -->
                <TextView
                    style="@style/DetailLabel"
                    android:text="Địa chỉ" />

                <TextView
                    style="@style/DetailValue"
                    android:text="Phòng 401, Tòa A2,\nChung Cư Hưng Thịnh" />
                <!-- Hàng 3: Số điện thoại -->
                <TextView
                    style="@style/DetailLabel"
                    android:text="Số điện thoại" />

                <TextView
                    style="@style/DetailValue"
                    android:text="+8424599721" />
                <!-- Hàng 4: Email -->
                <TextView
                    style="@style/DetailLabel"
                    android:text="Email" />

                <TextView
                    style="@style/DetailValue"
                    android:text="vuhoang123@gmail.com" />
                <!-- Hàng 5: Ngày đăng ký -->
                <TextView
                    style="@style/DetailLabel"
                    android:text="Ngày đăng ký" />

                <TextView
                    style="@style/DetailValue"
                    android:text="01/10/2019" />
                <!-- Hàng 6: Ngày hết hạn -->
                <TextView
                    style="@style/DetailLabel"
                    android:text="Ngày hết hạn" />

                <TextView
                    style="@style/DetailValue"
                    android:text="01/08/2025"
                    android:textColor="#E53935"
                    android:textStyle="bold" />
            </GridLayout>
        </LinearLayout>
    </RelativeLayout>

    <!-- Các nút hành động ở dưới cùng -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#FFFFFF">

        <!-- Nút Đóng -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnClose"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Đóng"
            android:textColor="#1A2B4E"
            app:strokeColor="#1A2B4E"
            app:cornerRadius="12dp" />

        <!-- Nút Gửi thông báo -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSendNotification"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="Gửi thông báo đến hạn"
            android:textAllCaps="false"
            android:textSize="15sp"
            app:backgroundTint="#1A2B4E"
            app:cornerRadius="12dp" />
    </LinearLayout>
</LinearLayout>