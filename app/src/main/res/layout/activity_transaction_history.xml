<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Thanh tiêu đề -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="#fff">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:background="?android:selectableItemBackground"
            android:contentDescription="Back"
            android:src="@drawable/ic_arrow_back"
            android:tint="#22385C"
            tools:ignore="UseAppTint,TouchTargetSizeCheck" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lịch sử giao dịch"
            android:textColor="#22385C"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <!-- Tabs chuyển loại dịch vụ -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:background="#f3f7fb">

        <Button
            android:id="@+id/btnTabElectric"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/bg_tab_selected"
            android:text="Điện"
            android:textColor="#fff"
            android:textStyle="bold"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/btnTabWater"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/bg_tab_unselected"
            android:text="Nước"
            android:textColor="#324A72"
            android:textStyle="bold"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/btnTabParking"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/bg_tab_unselected"
            android:text="Đỗ xe"
            android:textColor="#324A72"
            android:textStyle="bold"
            tools:ignore="TouchTargetSizeCheck" />
        <!-- Thêm tab khác nếu muốn -->
    </LinearLayout>

    <!-- Indicator -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">
        <View android:layout_width="8dp" android:layout_height="8dp" android:background="@drawable/bg_dot_active" android:layout_marginEnd="5dp"/>
        <View android:layout_width="8dp" android:layout_height="8dp" android:background="@drawable/bg_dot_inactive" android:layout_marginEnd="5dp"/>
        <View android:layout_width="8dp" android:layout_height="8dp" android:background="@drawable/bg_dot_inactive"/>
    </LinearLayout>

    <!-- Danh sách giao dịch -->
    <include layout="@layout/item_transaction"/>
    <include layout="@layout/item_transaction"/>
    <include layout="@layout/item_transaction"/>

</LinearLayout>
