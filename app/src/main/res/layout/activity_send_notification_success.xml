<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="24dp"
    tools:context=".SuccessActivity">

    <!-- Dùng một LinearLayout để nhóm các phần tử và căn giữa -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal">

        <!-- Biểu tượng thành công -->
        <ImageView
            android:id="@+id/ivSuccessIcon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_success"
            android:contentDescription="Thành công"/>

        <!-- Dòng chữ thông báo -->
        <TextView
            android:id="@+id/tvSuccessMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Tạo thông báo thành công !"
            android:textColor="#FF0000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Nút quay về -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBackToHome"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_marginTop="24dp"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:text="Về trang thông báo"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            app:backgroundTint="#212A55"
            app:cornerRadius="12dp" />

    </LinearLayout>

</RelativeLayout>