<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F3F7FB"
    android:fitsSystemWindows="true">

    <!-- Thanh tiêu đề (Toolbar) -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#212A55"
        android:elevation="4dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_back"
            app:tint="@android:color/white"
            android:contentDescription="Quay lại" />

        <TextView
            android:id="@+id/tvToolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Tạo thông báo"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <!-- Nội dung Form có thể cuộn -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tạo thông báo mới cho cư dân"
                android:textColor="#333333"
                android:textSize="16sp"
                android:layout_marginBottom="24dp" />

            <!-- Trường Tiêu đề -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiêu đề"
                android:textColor="#333333"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/editTitle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_edittext_outline"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:hint="Nhập tiêu đề"
                android:inputType="textCapSentences"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- Trường Nội dung -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nội dung"
                android:textColor="#333333"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/editContent"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/bg_edittext_outline"
                android:gravity="top|start"
                android:hint="Nhập nội dung thông báo"
                android:inputType="textMultiLine"
                android:padding="12dp"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- Tùy chỉnh người nhận -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gửi đến"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <RadioGroup
                android:id="@+id/recipient_options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/radio_all_residents"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Toàn bộ cư dân"
                    android:checked="true" />

                <RadioButton
                    android:id="@+id/radio_specific_floor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Từng tầng" />

                <RadioButton
                    android:id="@+id/radio_specific_apartment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Từng căn hộ" />
            </RadioGroup>

            <!-- Các trường nhập liệu cho tầng/căn hộ -->
            <EditText
                android:id="@+id/floor_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_edittext_outline"
                android:hint="Nhập số tầng"
                android:inputType="text"
                android:padding="12dp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/apartment_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập số căn hộ"
                android:visibility="gone"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_edittext_outline"
                android:padding="12dp"
                android:inputType="text" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- Nút Gửi -->
            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="32dp"
                android:text="Gửi thông báo"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:backgroundTint="#212A55"
                app:cornerRadius="12dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>