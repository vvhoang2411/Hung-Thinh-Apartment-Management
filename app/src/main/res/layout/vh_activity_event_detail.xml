<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f9fa">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header -->
        <LinearLayout
            android:orientation="horizontal"
            android:background="#233366"
            android:paddingTop="20dp"
            android:paddingBottom="15dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/btnBack"
                android:src="@drawable/ic_arrow_back"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:tint="#ffffff" />

            <TextView
                android:id="@+id/tvTitle"
                android:text="Chi tiết sự kiện"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingEnd="32dp"/>
        </LinearLayout>

        <!-- Container -->
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/bg_border"
            android:padding="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Tiêu đề -->
            <TextView
                android:text="Tiêu đề"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/edtTieuDe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Lịch họp công dân chung cư"
                android:background="@drawable/edit_text_bg"
                android:layout_marginBottom="16dp"/>

            <!-- Nội dung -->
            <TextView
                android:text="Nội dung"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/edtNoiDung"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="top"
                android:hint="Nhập nội dung"
                android:background="@drawable/edit_text_bg"
                android:layout_marginBottom="16dp"/>

            <!-- Thời gian bắt đầu -->
            <TextView
                android:text="Thời gian bắt đầu"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/edtStartTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="20:00, 21/5/2025"
                android:background="@drawable/edit_text_bg"
                android:layout_marginBottom="16dp"/>

            <!-- Thời gian kết thúc -->
            <TextView
                android:text="Thời gian kết thúc"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/edtEndTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="21:00, 21/5/2025"
                android:background="@drawable/edit_text_bg"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
