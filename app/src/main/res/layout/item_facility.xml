<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_root"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="horizontal"
    android:background="@drawable/bg_facility_unselected"
    android:gravity="center_vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:layout_marginBottom="4dp"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/imgFacility"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:background="@drawable/bg_icon"
        android:scaleType="centerInside"
        android:layout_marginEnd="16dp"
        android:src="@drawable/img_pool"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvFacilityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bể Bơi"
            android:textColor="#22385C"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvFacilityPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="350VND/1 tháng"
            android:textColor="#808392"
            android:textSize="13sp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/imgChevron"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/img_pool"
        android:tint="#AAB1BF"
        tools:ignore="UseAppTint" />
</LinearLayout>
