<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <!-- Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#17335C">

        <!-- Back arrow -->
        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_arrow_back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_alignParentLeft="true"
            app:tint="#FFFFFF" />

        <!-- Title -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sự kiện"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <!-- List of events -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Event Card 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/rounded_bg"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="8dp"
                android:radius="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lịch bảo trì thang máy:"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lịch bảo trì định kỳ thang máy tòa nhà Hưng Thịnh tháng 8"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="8dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xem chi tiết"
                    android:textColor="#333333"
                    android:background="@drawable/rounded_yellow_button"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:textSize="14sp"
                    android:elevation="0dp"/>
            </LinearLayout>

            <!-- Event Card 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_bg"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:radius="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Huấn luyện kỹ năng pccc:"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nhằm nâng cao kỹ năng và ý thức về phòng cháy, chữa cháy cho các hộ dân"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="8dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xem chi tiết"
                    android:textColor="#333333"
                    android:background="@drawable/rounded_yellow_button"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:textSize="14sp"
                    android:elevation="0dp"/>
            </LinearLayout>

            <!-- Event Card 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_bg"
                android:orientation="vertical"
                android:padding="16dp"
                android:radius="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lịch họp công dân chung cư:"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lịch sinh hoạt công dân định kỳ"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="8dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xem chi tiết"
                    android:textColor="#333333"
                    android:background="@drawable/rounded_yellow_button"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:textSize="14sp"
                    android:elevation="0dp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
